"""Comprehensive test for TVS Diode component."""

load("../../units.zen", "Power", "Voltage")
Watts = Power
load("../../interfaces.zen", "Power", "Ground")
load("../../bom/match_generics.zen", "assign_house_parts")

Tvs = Module("../Tvs.zen")

vcc = Power("VCC", voltage=Voltage("3.3V"))
gnd = Ground("GND")

# Test all Package values
for package in Tvs.Package.values():
    name = "D_TVS_" + str(package)
    # suppress: bom.match_generic
    Tvs(
        name=name,
        package=package,
        peak_pulse_power=Watts("800 to 1200W"),
        reverse_clamping_voltage=Voltage("9 to 12V"),
        A=gnd,
        K=vcc,
    )

# Test with different voltage ratings
# suppress: bom.match_generic
Tvs(
    name="D_TVS_3V3",
    package="DO-219AB",
    peak_pulse_power=Watts("400 to 600W"),
    reverse_standoff_voltage=Voltage("3.3V"),
    reverse_clamping_voltage=Voltage("6 to 8V"),
    A=gnd,
    K=vcc,
)

# suppress: bom.match_generic
Tvs(
    name="D_TVS_12V",
    package="DO-214AC",
    peak_pulse_power=Watts("1200 to 1500W"),
    reverse_standoff_voltage=Voltage("12V"),
    reverse_clamping_voltage=Voltage("19 to 21V"),
    A=gnd,
    K=vcc,
)

# Test Bidirectional
# suppress: bom.match_generic
Tvs(
    name="D_TVS_Bi",
    package="DO-214AB",
    direction="Bidirectional",
    A=gnd,
    K=vcc,
)

# Test Optional Parameters (Minimal)
# Should work without reverse_clamping_voltage or peak_pulse_power
Tvs(name="D_TVS_Minimal", A=gnd, K=vcc)

# Test Bidirectional with generic Nets
sig_p = Net("SIG_P")
sig_n = Net("SIG_N")
# suppress: bom.match_generic
Tvs(
    name="D_TVS_Bi_Generic",
    direction="Bidirectional",
    A=sig_p,
    K=sig_n,
)

builtin.add_component_modifier(assign_house_parts)
