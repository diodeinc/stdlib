"""Comprehensive test for NetTie component."""

load("../../properties.zen", "Layout")

NetTie = Module("../NetTie.zen")

# Test combinations of MountType, PadSize, and pin_count
for variant in NetTie.Variant.values():
    name = "NT_" + str(variant)

    NetTie(
        name = name,
        variant = variant,
        **{
            "P{}".format(i + 1): Net(name + "_P{}".format(i + 1))
            for i in range(int(variant[0]))
        }
    )

# Test legacy approach
NetTie(
    name = "NT_legacy",
    mount_type = "SMD",
    pad_size = "0.5mm",
    pin_count = 3,
    P1 = Net("P1_legacy"),
    P2 = Net("P2_legacy"),
    P3 = Net("P3_legacy"),
)

NetTie(
    name = "NT_legacy_2",
    mount_type = "SMD_THT",
    pad_size = "0.3mm",
    pin_count = 2,
    P1 = Net("P1_legacy_2"),
    P2 = Net("P2_legacy_2"),
)

Layout(
    name = "preview",
    path = "build/NetTie",
)
