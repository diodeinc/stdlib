"""Test for SPICE model of BJT - demonstrates NPN common-emitter amplifier."""

load("../../interfaces.zen", "Ground", "Power")
load("../../properties.zen", "Simulation")

Bjt = Module("../../generics/Bjt.zen")
Resistor = Module("../../generics/Resistor.zen")

VCC = Power("VCC")
INPUT = Net("INPUT")
PROBE = Net("PROBE")
GND = Ground("GND")

# NPN transistor in common-emitter configuration
Bjt(
    name="Q1",
    package="SOT-23-3",
    bjt_type="NPN",
    B=INPUT,
    C=PROBE,
    E=GND,
)

# Collector load resistor
Resistor(
    name="RC",
    value="4.7kOhm",
    package="0603",
    P1=VCC,
    P2=PROBE,
)

# Base bias resistor
Resistor(
    name="RB",
    value="100kOhm",
    package="0603",
    P1=VCC,
    P2=INPUT,
)

Simulation(
    name="test_Bjt",
    setup=f"""
# Test BJT SPICE model - NPN common-emitter with DC sweep
# Supply voltage
V1 {VCC} {GND} DC 5V

# Small AC signal on base
V2 {INPUT} {GND} DC 0.7 AC 0.01

.control
  # DC sweep of base voltage to show transfer characteristic
  dc V2 0 1.2 0.01

  set hcopydevtype = svg
  hardcopy output/bjt_transfer.svg v({PROBE}) title "BJT Common-Emitter Transfer Curve" xlabel "V_BE (V)" ylabel "V_CE (V)"
.endc
""",
)

